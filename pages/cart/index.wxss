page, .container{
  height: 100%;
  background: #f6f6f6;
}
.address{
  background: #fff;
}

.address-info{
padding: 20rpx;
display: flex;
justify-content: space-between;
padding-right: 100rpx;
position: relative;
font-size: 14px;
}

.address-info::after{
  display: block;
  content: "";
  position: absolute;
  right: 25rpx;
  top: 35rpx;
  width: 16rpx;
  height: 16rpx;
  border-top: 1px solid #666;
  border-right: 1px solid #666;
  transform: rotate(45deg)
}

.address-text{
  padding: 20rpx;
  padding-top: 0;
  font-size: 14px;

}

.border{
  display: block;
  width: 100%;
  height: 15rpx;
}

.cart-title{
  display: flex;
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  border-top: 20rpx solid #eee;
  border-bottom: 1px solid #ddd;
  background: #fff;
}

.cart-title .iconfont{
  color: #999;
  margin-right: 10rpx;
  padding: 10rpx;
}

.goods-item{
  display: flex;
  background: #fff;
}

.goods-item .selected{
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-item .goods-info{
  flex: 1;
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
}

.goods-item .goods-info image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.goods-item .goods-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex:1;
}

.goods-item .goods-title{
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-flow--clamp:2;
  -webkit-box-orient: vertical;
}

 .goods-right-btm{
   width: 100%;
  display: flex;
  justify-content: space-between;
 
}

.goods-item .goods-price{
  color: red;
}

.goods-numbers{
  display: flex;
}

.goods-numbers text{
  line-height: 50rpx;
  margin: 0 30rpx;
  font-size: 12px;
}

.goods-number-btn{
width: 50rpx;
height:50rpx;
line-height: 50rpx;
text-align: center;
border: 2px solid #999;
color: #999;
border-radius: 2px;
}

.footer{
  display: flex;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  position: fixed;
  align-items: center;
  font-size: 14px;
  background: #fff;
}

.footer-left{
  height: 100%;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

.footer-left icon{
  margin-right: 20rpx;
}

.footer-center{
  flex: 1;
  margin: 5rpx 50rpx;
  line-height: 1;
}

.footer-center .colorRed{
  color:red;
}

.footer-center .colorGray{
  font-size: 12px;
  color: #999;
}

.checkout{
  width: 220rpx;
  background: red;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}